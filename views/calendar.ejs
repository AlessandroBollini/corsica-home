<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pulizie</title>
    <style>
        /* Reset some basic elements */
body, h1, p, button {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Use a clean, modern font */
body {
    font-family: 'Arial', sans-serif;
    background-color: #E3F2FD;
    color: #333;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 20px;
    text-align: center;
    overflow-x: hidden; /* Prevent horizontal scrolling */
}

/* Center the menu vertically and horizontally */
.menu {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.bottombanner {
    margin-top: auto;
    text-align: center;
    padding: 20px;
}

.button-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

button {
    font-size: 18px;
    padding: 12px 20px;
    margin: 10px 0;
    cursor: pointer;
    background-color: #0288D1; /* Blue background */
    color: white;
    border: none;
    border-radius: 5px;
    width: 200px; /* Fixed width */
    transition: background-color 0.3s;
}

button:hover {
    background-color: #0277BD; /* Darker blue on hover */
}

/* Calendar styles */
.calendar-container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100%;
    max-width: 600px;
}

.week {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    padding: 5px 0;
}

.tasks {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-top: 5px;
}

.card {
    flex: 1;
    padding: 5px;
    margin: 0 5px;
    border-radius: 5px;
    color: white;
    text-align: center;
}

.card.green {
    background-color: #4CAF50;
}

.card.yellow {
    background-color: #FFEB3B;
    color: #333;
}

.card.red {
    background-color: #F44336;
}

h2, h3, p {
    margin-bottom: 5px;
    font-size: 14px;
}


/* Container styling */
.container {
    width: 100%;
    max-width: 600px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    box-sizing: border-box;
    overflow-x: hidden; /* Prevent horizontal scrolling */
}

/* Header styling */
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

header h1 {
    font-size: 24px;
    color: #333;
}

#addCardBtn {
    font-size: 28px;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Modal styling */
.modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.4);
}

.modal-content {
    background-color: #fff;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    border-radius: 8px;
}

.close-btn {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

.close-btn:hover,
.close-btn:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
}

.submit-btn {
    background-color: #007BFF;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.submit-btn:hover {
    background-color: #0056b3;
}

.card-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)); /* Adjusted min-width for better fit */
    gap: 10px;
    margin-top: 20px;
    width: 100%;
    box-sizing: border-box; /* Ensures padding is included within width */
    overflow-x: hidden; /* Prevent horizontal overflow */
}

/* Card styling */
.todo {
    padding: 15px; /* Increased padding for better spacing */
    border-radius: 8px;
    color: #fff;
    justify-content: space-between;
    font-size: 14px; /* Adjusted font size */
    text-align: center;
    word-wrap: break-word;
    overflow-wrap: break-word;
    min-height: 120px; /* Increased height to ensure space for button */
    position: relative; /* Allows positioning of the delete button */
    box-sizing: border-box; /* Ensures padding is included within width */
    overflow: hidden; /* Prevents content from overflowing */
}

/* Card colors */
.todo.ale {
    background-color: rgb(241, 119, 119);
}

.todo.eric {
    background-color: rgb(117, 117, 231);
}

.todo.pol {
    background-color: rgb(109, 92, 92);
}

/* Ensure text is responsive */
.todo p {
    margin: 0;
    padding: 5px;
    word-wrap: break-word;
    overflow-wrap: break-word;
    white-space: pre-wrap;
}

.todo small {
    display: block;
    margin-top: 5px;
    font-size: 12px; /* Adjusted font size */
    color: #ccc;
    word-wrap: break-word;
    overflow-wrap: break-word;
}


/* Responsive design */
@media (max-width: 600px) {
    .calendar-container {
        padding: 0 10px;
    }

    .week {
        flex-direction: row;
        justify-content: space-between;
    }

    .tasks {
        flex: 3;
        justify-content: space-between;
    }

    .card {
        margin: 0 2px;
    }
}

/* Card delete button styling */
.delete-btn {
    background-color: #000000; /* Black color for delete button */
    color: white;
    border: none;
    border-radius: 5px; /* Rounded edges */
    width: 24px; /* Square shape */
    height: 24px; /* Square shape */
    cursor: pointer;
    font-size: 16px;
    line-height: 24px;
    text-align: center;
    position: absolute; /* Positioned relative to the card */
    bottom: 10px; /* Space from the bottom of the card */
    left: 50%; /* Center horizontally */
    transform: translateX(-50%); /* Adjust for exact center alignment */
    display: flex;
    justify-content: center;
    align-items: center;
}

.delete-btn:hover {
    background-color: #858585;
}

/* Ensure the form doesn't affect the layout */
.delete-form {
    display: inline;
}
    </style>
</head>
<body>
    <div class="calendar-container">
        <% weeks.forEach((week, index) => { %>
            <div class="week">
                <h2><%= week.dates.start.toDateString() %> - <%= week.dates.end.toDateString() %></h2>
                <div class="tasks">
                    <div class="card green">
                        <h3>Bagno</h3>
                        <p><%= weeklyTasks[index].tasks.Bathroom %></p>
                    </div>
                    <div class="card yellow">
                        <h3>Cucina</h3>
                        <p><%= weeklyTasks[index].tasks.Kitchen %></p>
                    </div>
                    <div class="card red">
                        <h3>Soggiorno</h3>
                        <p><%= weeklyTasks[index].tasks.LivingRoom %></p>
                    </div>
                </div>
            </div>
        <% }); %>
        <br></br>
        <div class="bottombanner">
            <button onclick="window.location.href='/'">Home</button>
        </div>
    </div>
</body>
</html>
